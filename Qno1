#include <iostream>
using namespace std;
int main ( ) {
    cout<<"Hafiza Atia Irshad "<<endl;
    cout<<"Roll No: 25011519-028"<<endl;
 int numberoftransaction;
 float rechargeamount;
 float totalRechargeamount = 0;
 int numberoflargerecharges = 0;
 cout<<"Enter total number of transaction: "<<endl;
 cin>>numberoftransaction;
 for(int i = 1; i<= numberoftransaction; i++) {
    cout<<"Enter amount for Recharge : "<<i<<" ";
    cin>>rechargeamount;
    totalRechargeamount = totalRechargeamount + rechargeamount;
    if(rechargeamount>900) {
        cout<<"Large Recharge: "<<endl;
        numberoflargerecharges = numberoflargerecharges+1;
    } else {
        cout<<"Normal Recharge: "<<endl;
    }
    cout<<"\n Summary of Recharge Transactions "<<endl;
    cout<<"\n Total Recharge Amount "<< totalRechargeamount<<endl;
    cout<<"\n Number of Large Recharge Transaction "<<numberoflargerecharges<<endl;

    return 0;
}